    <div id="container">
        <h2>Transfer Money</h2>
        <form action="/customers/transfermoney" method="post" class="formTransfer">

            <div class="mb-3 mt-3">
                <label for="from" class="form-label">From</label>
                <select class="form-select" aria-label="Default select example" id="from" name="from" required>
                    <!-- <option selected>--Choose the Customer--</option> -->
                    <option selected><%= customerDetailOption.name %> </option>
                    
                       
                    
                  </select>

            </div>
            <div class="mb-3">
                <label for="to" class="form-label">To</label>
                <select class="form-select" aria-label="Default select example" id="to" name="to">
                    
                        
                      
                    
                        <option selected>--Choose the Customer--</option>
             <%           for (let index = 0; index < customerDetail.length; index++) {   %>
                <%           let element  = customerDetail[index]       %>
                <%          if(   element.name ===  customerDetailOption.name ){  %>
                    
                <%             continue; } %> 
                            <option> <%= element.name %>  </option> 
                            <%     }%> 
                        
                    
                  </select>

            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Transfer Amount</label>
                <input type="number" class="form-control" id="exampleFormControlInput1" name="amount" min="1" required>
            </div>
            <div class="button">
                <a href="/customers" class="btn btn-secondary mb-3">Back</a>
                <button type="submit" class="btn btn-primary mb-3 ">Transfer</button>
            </div>

        </form>
